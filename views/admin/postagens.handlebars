{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
    
{{/each}}

<h2>Lista de Postagens</h2>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova postagem</button></a>
<hr>

{{#each postagens}}
    <div class="card mt-3">
        <div class="card-body ">
            <h4>{{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <small>Data: {{data}}</small>
            <br>
            <small>Categoria: {{categoria.nome}}</small>
            <br>
            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-info mt-3">Editar</button></a>
            <a href="/admin/postagens/deletar/{{_id}}"><button class="btn btn-danger mt-3">Deletar</button></a>
            
        </div>
    </div>
{{else}}
<p>Nenhuma postagem registrada</p>

{{/each}}